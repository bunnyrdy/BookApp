@using Web.Models.Models
@model List<Product>
<div class = "container">
    <div class="row pt-4">
    <div class = "col-6">
        <h2 class = "text-primary">
            Product</h2>
    </div>
    <div
    class = "col-6 text-end">
    <a asp-controller="Product" asp-action="Create" class = "btn btn-primary">
        <i class="bi bi-plus-circle-fill"> Create New Product</i>
    </a>
    
    </div>
</div>

<table class= "table table-bordered table-striped" >
    <tr>

        <th>
           Title 
        </th>
        <th>
            Description
        </th>
        <th>
           ISBN 
        </th>
        <th>
           Author
        </th>
        <th>
            Price
        </th>
        <th>
            Actions
        </th>
    </tr>
    <thead>
        <tbody> 
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.ISBN</td>
                    <td>@item.Author</td>
                    <td>@item.ListPrice</td>
                    <td>
                         <div class= "w-75 btn-group" role="group" >
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Product_Id" class="btn btn-primary mx-2">
                               <i class="bi bi-pencil-square"></i> Edit
                               </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Product_Id" class="btn btn-danger mx-2">
                              <i class="bi bi-trash"></i> Delete
                               </a>
                         </div>
                    </td>
                </tr>
            }
        </tbody>
    </thead>

</table>
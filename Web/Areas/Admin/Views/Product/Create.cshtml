@using Web.Models.Models
@model Product
<form method="post">
<div class = "border p-3 mt-4">
    <div class = "row pb-2">
        <h2 class = "text-primary">Create Product</h2>
        <hr/>
    </div>
    @* <div asp-validation-summary="All"></div> *@
    <div class = "mb-3 row">
        <label asp-for="Title"> </label>
        <input asp-for="Title"class="form-control" />
